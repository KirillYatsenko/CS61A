(define (make-account balance account-password invoked)
  (define (withdraw amount)
    (if (>= balance amount)
        (begin (set! balance 
                     (- balance amount))
               balance)
        "Insufficient funds"))
  (define (validate-password password)
    (eq? account-password password))
  (define (deposit amount)
    (set! balance (+ balance amount))
    balance)
  (define (dispatch m provided-password)
    (set! invoked (+ invoked 1))
    (cond ((> invoked 7)
	   (lambda (operation) "Cops were called"))
          ((eq? m 'validate) validate-password)
          ((not (eq? account-password provided-password))
	   (lambda (operation) "Incorrect password"))
      	  ((eq? m 'withdraw) withdraw)
          ((eq? m 'deposit) deposit)
          (else (error "Unknown request: 
                 MAKE-ACCOUNT" m))))
  dispatch)
